                android:background="#e5e7e8" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="27dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <ImageView
                    android:layout_width="90dp"
